<div class="center-form panel">
  <div class="panel-body">
    <h4 class="text-center">Sign up</h4>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>
        <div class="form-group has-feedback">

          <div class="field">
            <%= f.label :email %><br />
            <%= f.email_field :email, autofocus: true, :input_html => { :class => 'form-control input-lg' } %>
          </div>

          <div class="field">
            <%= f.label :password %>
            <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %><br />
            <%= f.password_field :password, autocomplete: "off", :input_html => { :class => 'form-control input-lg' } %>
          </div>

        <div class="field">
          <%= f.label :password_confirmation %><br />
          <%= f.password_field :password_confirmation, autocomplete: "off", :input_html => { :class => 'form-control input-lg' } %>
        </div>

        <div class="actions">
          <%= f.submit "Sign up", class: 'btn btn-block btn-primary' %>
        </div>
      <% end %>

      <p class="text-center text-muted">
        <%= render "devise/shared/links" %>
      </p>
    </div>
  </div>
</div>
